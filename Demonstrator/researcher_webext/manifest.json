{
  "manifest_version": 2,
  "name": "genecoop_research",
  "description": "Support consent requests as defined by Genecoop",
  "homepage_url": "https://github.com/LedgerProject/GeneCoop/tree/master/Demonstrator/",
  "version": "0.0.3",
  "browser_specific_settings": {
    "gecko": {
      "id": "researcher@genecoop.waag.org"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://genecoop.waag.org/request/*",
        "http://localhost/request/*"
      ],
      "js": [
        "content_script.js",
        "zenpage/zenpage.bundle.js"
    ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/popup.html",
    "default_title": "GeneConsent Research"
  },
  "page_action": {
    "default_popup": "pageAction/index.html",
    "default_title": "GeneConsent Research"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "web_accessible_resources": [
  ]
}